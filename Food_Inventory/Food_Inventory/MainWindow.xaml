            </Button>
            <Button x:Name="MinimiseButton" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Padding="2,0,2,0" FontWeight="Bold" BorderThickness="0,0,0,0" Click="MinimiseButton_Click" MinWidth="30" MinHeight="30">
